<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="459.0"
            prefWidth="850.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="io.github.rainblooding.fx.gui.MainController">
    <children>
        <CheckBox fx:id="checkBoxTop" contentDisplay="CENTER" layoutX="545.0" layoutY="17.0" mnemonicParsing="false"
                  onAction="#changeUpTop" prefHeight="16.0" prefWidth="52.0" text="置顶" textAlignment="CENTER"/>
        <Button layoutX="310.0" layoutY="230.0" mnemonicParsing="false" onAction="#clockRun" prefHeight="34.0"
                prefWidth="70.0" text="专注计时"/>
        <Button layoutX="390.0" layoutY="230.0" mnemonicParsing="false" onAction="#timeStop" prefHeight="34.0"
                prefWidth="70.0" text="停止计时"/>
        <Button layoutX="470.0" layoutY="230.0" mnemonicParsing="false" onAction="#sleepRun" prefHeight="34.0"
                prefWidth="70.0" text="休息计时"/>
        <Button layoutX="310.0" layoutY="272.0" mnemonicParsing="false" onAction="#addTask" prefHeight="34.0"
                prefWidth="70.0" text="添加待办"/>
        <Button layoutX="470.0" layoutY="272.0" mnemonicParsing="false" onAction="#addbusyTask" prefHeight="34.0"
                prefWidth="70.0" text="紧急待办"/>
        <Button layoutX="390.0" layoutY="272.0" mnemonicParsing="false" onAction="#queryTask" prefHeight="34.0"
                prefWidth="70.0" text="查看列表"/>
        <Button layoutX="310.0" layoutY="316.0" mnemonicParsing="false" onAction="#clearCache" prefHeight="34.0"
                prefWidth="70.0" text="刷新缓存"/>
