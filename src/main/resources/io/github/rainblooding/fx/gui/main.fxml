                <TableColumn fx:id="colTasktitle" prefWidth="96.00" text="任务标题"/>
                <TableColumn fx:id="colTaskinfo" prefWidth="96.00" text="任务描述"/>
                <TableColumn fx:id="colmaketime" prefWidth="96.00" text="创建时间"/>
            </columns>
        </TableView>
        <TableView fx:id="busytview" layoutX="547.0" layoutY="34.0" onMousePressed="#ClickTwo" prefHeight="343.0"
                   prefWidth="290.0">
            <columns>
                <TableColumn fx:id="colBusyTasktitle" prefWidth="96.00" text="任务标题"/>
                <TableColumn fx:id="colBusyTaskinfo" prefWidth="96.00" text="任务描述"/>
                <TableColumn fx:id="colbusymaketime" prefWidth="96.00" text="创建时间"/>
            </columns>
        </TableView>
        <Label alignment="CENTER" layoutX="84.0" layoutY="15.0" prefHeight="21.0" prefWidth="142.0"
               text="-----待办列表-----" textAlignment="CENTER" textOverrun="CLIP"/>
        <Label alignment="CENTER" layoutX="628.0" layoutY="15.0" prefHeight="21.0" prefWidth="127.0"
               text="-----紧急待办-----" textAlignment="CENTER"/>
        <Label fx:id="timeclock" alignment="CENTER" layoutX="305.0" layoutY="91.0" prefHeight="66.0" prefWidth="240.0"
               text="00:25:00" textAlignment="CENTER" textOverrun="CENTER_ELLIPSIS">
            <font>
                <Font name="Agency FB" size="80.0"/>
            </font>
        </Label>
